.container {
  padding: 40rpx 0;
}

.timeTitle {
  height: 60rpx;
  line-height: 60rpx;
}

.timeTitle .active {
  border-bottom: 4rpx solid #000;
}

.timed {
  font-size: 20rpx;
  line-height: 20rpx;
  position: relative;
  top: 13rpx;
}
.centers{
  display: flex;
  align-items: center;
}
.classItem{
  width: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}
.InputIcon{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  transform: rotate(-90deg);
  right: 0;
}
.moneyContent{
  width: 100%;
  margin: 20rpx auto;
  text-align: center;
  padding: 40rpx 0;
}
.moneyNumber{
  font-size: 40rpx;
}
.moneyInput{
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 0 auto;
  border: 1rpx solid red;
  position: absolute;
  bottom: 20rpx;
  left: 5%;
  opacity: 0;
  z-index: 22;
  background-color: transparent;
  color: transparent;
}

.blocks {
  width: 90%;
  height: 80rpx;
  line-height: 80rpx;
  display: flex;
  margin: 0 auto;
  justify-content: center;
  margin-bottom: 20rpx;
}

.block {
  width: 100rpx;
  height: 80rpx;
  text-align: center;
  box-sizing: border-box;
  border: 1rpx solid #CFCFCF;
  border-right: #fff;
}
.block:last-child{
  border: 1rpx solid #CFCFCF;
}

.cursor {
  width: 1px;
  height: 40rpx;
  background-color: #000;
  animation: focus 0.7s infinite;
}

/* 光标动画 */

@keyframes focus {
  from {
    opacity: 0;
  }

  to {
    opacity: 0;
  }
}
.borRight{
  border: 1rpx solid #f4f4f4;
  border-radius: 5rpx;
  margin-left: 15rpx;
}
.relative {
  z-index: 22;
}

.showsure {
  max-height: 400rpx;
}

.mr10b {
  margin-right: 10%;
}

.selectTime {
  width: 500rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border: 1rpx solid #5b5b5b;
  border-radius: 4rpx;
  font-size: 28rpx;
  color: #5b5b5b;
  margin: 40rpx 0;
}

.selectImg {
  margin-top: 5rpx;
  margin-left: 5rpx;
}

.select {
  font-size: 26rpx;
  width: 200rpx;
  height: auto;
  box-shadow: 0 0 15rpx #e9e9e9;
  border-radius: 15rpx;
  text-align: center;
  position: absolute;
  background-color: #fff;
  right: 5%;
  z-index: 2;
}
.icon {
  margin-top: 0rpx;
  margin-right: 0;
}
.select .option {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #f7f7f7;
  z-index: 22;
}

.select .option:last-child {
  border: none;
}
.option.active{
 color:#29d9d6;
}
.addImg {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  justify-content: center;
  margin: 0 auto;
  margin-bottom: 10rpx;
}
.relative{
  position: relative;
}
.List {
  width: 100%;
  height: auto;
  box-sizing: border-box;
  background-color: #fff;
}

.item {
  width: 95%;
  height: auto;
  margin-left: 5%;
  border-bottom: 1rpx solid #f3f3f3;
  padding: 20rpx 5% 20rpx 0;
  box-sizing: border-box;
}

.item .start {
  display: flex;
  font-size: 28rpx;
}

.item .wrap {
  line-height: 35rpx;
  font-size: 28rpx;
  padding-bottom: 20rpx;
}

.List1 .item {
  width: 100%;
  padding-left: 5%;
  margin-left: 0;
}

.codeInput {
  width: 95%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  margin: 20rpx 2.5%;
  margin-bottom: 20rpx;
  text-align: left;
  padding-left: 5%;
  color: #000;
  box-sizing: border-box;
  border-radius: 8rpx;
  border: 1rpx solid #cacaca;
}
.waitContainer{
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
  flex-direction: column;
}
.waitTime{
  width: 120rpx;
  height: 120rpx;
}
