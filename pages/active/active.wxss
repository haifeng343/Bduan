.navbar {
  display: flex;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 1;
  width: 100%;
  height: 60rpx;
  flex-direction: row;
  text-align: center;
  color: #000;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.navbar-item {
  flex: 1;
}
.navbar-item-active {
  /* transition: all 0.3s; */
  border-bottom: 3rpx solid #29d9d6;
}
.List{
  margin-top: 80rpx;
  width: 100%;
  height: auto;
  margin-bottom: 20rpx;
}
.Item{
  width: 95%;
  margin:20rpx 2.5% 0;
  background-color: #fff;
  box-sizing: border-box;
  border-radius: 15rpx;
}
.ItemContent{
  padding: 20rpx 2.5%;
  display: flex;
  flex-direction: column;
}
.coverImgFather{
  width: 100%;
  height: 300rpx;
  overflow: hidden;
}
.coverImg{
  width: 100%;
  height: 600rpx;
  border-radius: 15rpx;
}
.titleTxt{
  font-size: 32rpx;
  line-height: 40rpx;
  width: 80%;
}
.statusTxt{
  font-size: 28rpx;
  line-height: 40rpx;
}
.des{
  line-height: 36rpx;
}
.contentFooter{
  display: flex;
  justify-content: flex-end;
  margin-top: 20rpx;
  padding-top: 20rpx;
}
.contentBtn{
  font-size: 28rpx;
  border: 1rpx solid #000;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 8rpx;
  margin-right: 20rpx;
}
.contentBtn:last-child{
  margin-right: 0;
}









