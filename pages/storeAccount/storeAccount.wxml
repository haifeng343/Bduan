<view class='content'>
  <view class='item pd20 start' wx:for="{{List}}" wx:key>
    <view>
      <image src='{{item.HeadUrl}}' mode='aspectFill' class='avator'></image>
    </view>
    <view class='column w100'>
      <view class='between w100 ft28 h40'>
        <view>账户名: {{item.UserName}}</view>
        <view wx:if="{{item.IsAdministrator==true}}">管理员</view>
        <view wx:else>普通账户</view>
      </view>
      <view class='between w100 ft24 h40'>
        <view>手机号: {{item.Mobile}}</view>
        <!-- <view class='cc'>绑定时间: 2019-5241-474</view> -->
      </view>
    </view>
  </view>
</view>

<!--分配弹出框-->
<view class="zan-dialog {{ showSuccess ? 'zan-dialog--show' : 'none' }}" catchtouchmove="ture">
  <view class="zan-dialog__mask" bindtap="toggleDialog" />
  <view class="zan-dialog__container">
    <view class='h60 bold center pd20'>分配账户</view>
    <view class='dialogList'>
      <checkbox-group bindchange="checkedChange">
        <view class='dialogItem pd20 start' wx:for="{{accountList}}" wx:key>
          <checkbox value='{{item.AccountId}}' checked='{{item.AccountId}}'></checkbox>
          <view>
            <image src='{{item.HeadUrl}}' mode='aspectFill' class='avator'></image>
          </view>
          <view class='column w100'>
            <view class='between w100 ft28 h40'>
              <view>账户名: {{item.UserName}}</view>
              <view wx:if="{{item.IsAdministrator==true}}">管理员</view>
              <view wx:else>普通账户</view>
            </view>
            <view class='between w100 ft24 h40'>
              <view>手机号: {{item.Mobile}}</view>
              <!-- <view class='cc'>绑定时间: 2019-5241-474</view> -->
            </view>
          </view>
        </view>


      </checkbox-group>
    </view>
    <view class='know h80 bort between'>
      <view class='cancel' bindtap='bindCancel'>取消</view>
      <view class='cancel' bindtap='bindSure'>确认</view>
    </view>
  </view>
</view>

<view class='add' bindtap='fenpei' wx:if="{{IsShow==true}}">分配账户</view>