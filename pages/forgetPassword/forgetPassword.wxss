page{
  background-color: #fff;
}
.right{
  display: flex;
  justify-content: flex-end;
  padding-right: 5%;
}
.icon1{
  margin-left: 0;
}
label{
  font-size: 28rpx;
}
.imgCoded {
  font-size: 24rpx;
  margin: 0;
  position: absolute;
  box-sizing: border-box;
  padding: 0 10rpx;
  right: 5%;
  bottom: 0;
  background-color: #fff;
}

.masks {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 503;
}

.imgCode {
  width: 570rpx;
  height: 400rpx;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  margin: auto;
  background: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
}

.imgCodeTitle {
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  position: relative;
  color: #000;
  font-size: 34rpx;
}

.codeNumber {
  text-align: left;
  color: #000;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 10rpx;
}

.delete {
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  top: 0;
  right: 0;
}

.inputBox {
  width: 500rpx;
  height: 100rpx;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
}

.codeImg{
 width: 200rpx;
  height: 100%;
}
.loginBtns {
  width: 500rpx;
  height: 88rpx;
  border-radius: 10rpx;
  background: #29d9d6;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 88rpx;
}

.absolute {
  position: absolute;
  width: 100%;
  height: 100vh !important;
  z-index: 9;
  background: rgba(0, 0, 0, 0.6);
}

.fiexed {
  position: fixed;
  width: 80%;
  height: 550rpx;
  z-index: 10;
  background-color: #fff;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  border-radius: 15rpx;
}

.img_er {
  width: 250rpx;
  height: 250rpx;
  object-fit: cover;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 40px auto 10px;
  background-color: #fff;
}

.er_text {
  font-size: 14px;
  text-align: center;
}

.hascode{
  width: 160rpx;
  height: 50rpx;
  text-align: center;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 50rpx;
  background-color: transparent;
  position: absolute;
  right: 5%;
  bottom: 0;
  color: #ccc;
}
.theme{
  color: #29D9D6;
  border: 1rpx solid #29D9D6!important;
}
.wd{
  width: 70%;
}